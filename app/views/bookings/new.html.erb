<div class="container" style="width: 80%;">
  <div class="row">
    <div class="col-md-offset-3 col-md-6 padding-form matt-signup-wrapper">

      <h1>Where can we reach you?:</h1>
      <p>This information is for booking confirmation purposes only</p>
      <p><strong>Please Note:</strong> your booking is not valid unless you click the link in the email after this form</p>
      <br>
      <%= simple_form_for [@restaurant, @booking] do |f| %>

      <div class="space-around">
        <div style="flex-grow: 1;">
          <%= f.input :visitor_first_name, label: 'your first name', error: 'name is mandatory', placeholder: 'enter first name' %>
          <!-- this sets the attribute visitor_first_name -->
        </div>
        <div style="flex-grow: 1;">
          <%= f.input :visitor_last_name, label: 'your last name', error: 'name is mandatory', placeholder: 'enter last name' %>
                <!-- this sets the attribute visitor_second_name -->
        </div>
      </div>

      <%= f.input :visitor_email, label: 'Your email (to confirm)', placeholder: 'user@domain.com' %>
      <%= f.input :visitor_phone, label: 'Your phone number', placeholder: 'tel.' %>
<!-- TODO: add number require & regex check -->

      <%= f.hidden_field :number_of_people, value: @number_of_people %>
      <%= f.hidden_field :date, value: @datetime %>

      <%= f.hidden_field :status, value: "booking_requested_by_user" %>

      <%= f.submit "Send Booking Confirmation Mail" %>
      <% end %>


<!--    <div class="form-group" id="reservation-button">
          <%= link_to "Make Reservation",  new_restaurant_booking_path(@restaurant), class:"btn btn-success" %>
        -->

        <p>You may need to check your email filters</p>
        <% if current_user  %>

        <% end  %>
      </div>
    </div>
  </div>

